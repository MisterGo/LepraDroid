<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.lepradroid"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="LepraDroidApplication" 
        android:theme="@android:style/Theme.Light"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Main"
            android:theme="@style/StyledIndicators"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogonScreen" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".PostsScreen" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".BlogsScreen" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".PostScreen" android:theme="@style/StyledIndicators" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".BlogScreen" android:configChanges="keyboardHidden|orientation"/>
    </application>
</manifest>